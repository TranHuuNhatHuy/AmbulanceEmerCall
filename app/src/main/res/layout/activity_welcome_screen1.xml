<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huy9515gmail.newambulanceemercall.WelcomeScreen1"
    android:background="@color/colorMainTheme">

    <ImageView
        android:id="@+id/imgEmercall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/emercall_text"/>

    <TextView
        android:id="@+id/ambulance_text"
        android:layout_below="@+id/imgEmercall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:layout_centerHorizontal="true"
        android:text="ambulance"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:textSize="50dp"/>

    <TextView
        android:id="@+id/welcome1_text1"
        android:layout_below="@id/imgEmercall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome1_text1"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/welcome1_text2"
        android:layout_below="@id/welcome1_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome1_text2"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:text="1/4"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="#f5586c"
                android:text="Next"
                android:textColor="#fff"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
